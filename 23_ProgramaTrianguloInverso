/*PROGRAMA DE ESPEJO TRIANGULO RECTANGULO*/

#include <stdio.h>
void imprime(int);
void imprime2(int);
int main(){
int n=0;           
printf("Indica el numero limite: ");  
scanf("%d", &n);
imprime(n);
imprime2(n);
return 0;
}
void imprime(int b){
int a,c;
for(a=0; a<=b; a++){
    for(c=1; c<=a; c++)
        printf("%d\t", c);
 printf("\n");
}
}
void imprime2(int d){
int e,f;
for(e=d-1; e>=0; e--){
    for(f=0; f<e; f++)
        printf("%d\t", f+1);
 printf("\n");
}
}
