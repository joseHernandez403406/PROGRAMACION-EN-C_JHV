/*PROGRAMA DE TRIANGULO ALREVES*/

#include <stdio.h>
void imprime4(int);
int main(){
int n=0;           
printf("Indica el numero limite: ");  
scanf("%d", &n);
imprime4(n);
return 0;
}
void imprime4(int k){
int m,n,o;

for(m=k; m>=1; m--){
	for(n=k-1; n>=m; n--){
		printf("\t");
}
for(o=m; o>0; o--){
	printf("%d\t",o);
}
printf("\n");
}
}
