/*PROGRAMA DE IF Y ELSE CON VALORES SOLICITADOS AL USUARIO*/

#include<stdio.h>

int main (void){
	int A,B,C;
	printf("esbribe el valor de A:\n");
	scanf("%d",&A);
	printf("esbribe el valor de B:\n");
	scanf("%d",&B);
	printf("esbribe el valor de C:\n");
	scanf("%d",&C);
	
	{
		if (A > 3)
		printf("el numero es mayor que 3:%d\n",A);
		else
		printf ("el numero es menor que 3:%d\n",A);
			
	}
	
	{
		if (A > C)
		printf("El valor de A es mayor al de C:%d\n",A,C);
		else
		printf ("El valor de A es menor al de C:%d\n",A,C);
	}
	
	{
		if ( B != C )
		printf("El valor de B es diferente al de C:%d\n",B,C);
		else
		printf ("El valor de B es no diferente al de C:%d\n",B,C);
	}
	
	{
		if(A == 3)
		printf("el valor de A es igual a 3:%d\n",A);
		else
		printf("el valor de A no es igual a 3:%d\n",A);
	}
	
	{
		if ( A * B == 15  )
		printf("La mumtiplicacion es A*B es igual a 15%d\n",A,B);
		else 
		printf("La mumtiplicacion es A*B es no igual a 15%d\n",A,B);
	}
	
	{
	if ( C / B < A   )
		printf("La division entre C Y B es menor a A%d\n",A,B,C);
		else 
		printf("La division entre C Y B no es menor a A%d\n",A,B,C);
	}	
	
	{
		if (C / B == -10)
		printf("La division entre C y B es igual a 10 %d\n",C,B);
		else
		printf("La division entre C y B no es igual a -10%d\n",C,B);
	}
	
	return 0;
}
